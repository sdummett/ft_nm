# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
NAME		=	ft_nm

# **************************************************************************** #
#       COMMANDS                                                               #
# **************************************************************************** #
CC		=	cc
#RM			=	rm

# **************************************************************************** #
#       FLAGS                                                                  #
# **************************************************************************** #
#RMFLAGS		=	-rf
#CFLAGS		=	-Wall -Wextra -Werror

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS		=	srcs/main.c \
				srcs/debug_elf_header.c \
				srcs/debug_elf_section.c \
				srcs/debug_elf_symtab.c \

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #
OBJS		=	$(SRCS:.c=.o)

%.o			:	%.c
				$(CC) -I. -c $(CFLAGS) $< -o $@

$(NAME)		:	$(OBJS)
				$(CC) $(CLAGS) $(OBJS) -o $(NAME)

all			:	$(NAME)

clean		:
				rm -f $(OBJS)

fclean		:	clean
				rm -f ft_nm

re			:	fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY		:	all clean fclean re test
